{
  "manifest_version": 3,
  "name": "ProxySwitch",
  "version": "1.0.0",
  "description": "Quick and easy proxy server management with multiple protocol support",
  "permissions": [
    "proxy",
    "storage",
    "webRequest",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "32": "icons/icon32.png"
  }
} 